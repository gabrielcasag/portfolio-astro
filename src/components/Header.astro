---
import { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
import NameTag from "./NameTag.astro";
---

<header>
    <a href="/" id="logo">
        <NameTag />
    </a>

    <nav>
        <a href="" class="menu__item">{t("header.about")}</a>
        <a href="" class="menu__item">{t("header.experience")}</a>
        <a href="" class="menu__item">{t("header.projects")}</a>
        <a href="" class="menu__item">{t("header.contact")}</a>
        <LanguageSelector
            showFlag={true}
            class="language__selector menu__item"
        />
    </nav>
</header>

<style>
    header {
        border: 0.15rem solid var(--border);
        padding: 1rem;
        border-radius: var(--radius);

        display: flex;
        align-items: center;
        justify-content: space-between;

        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);

        position: sticky;
        top: 1rem;

        z-index: 100;
        transition: transform 0.3s ease-in-out;
    }

    header.hidden {
        transform: translateY(-200%);
    }

    header #logo {
        font-size: 2rem;
        line-height: 2.5rem;
    }

    header > nav {
        display: flex;
        column-gap: 1rem;
    }

    header > nav > a {
        transition: all 300ms;
        font-size: 0.875rem;

        &:hover {
            filter: brightness(1.05);
            text-shadow: 0px 0px 4px var(--secondary);
        }
    }

    .language__selector {
        background: none;
        border: none;
        font-weight: bold;

        -webkit-appearance: none;
    }

    .menu__item {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    @media screen and (max-width: 540px) {
        header > nav {
            display: none;
        }
    }
</style>
