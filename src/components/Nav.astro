---
import { t } from "i18next";

import { LanguageSelector } from "astro-i18next/components";
import { Icon } from "astro-icon/components";
---

<nav class="nav">
  <a href="" class="menu__item">{t("header.about")}</a>
  <a href="" class="menu__item">{t("header.experience")}</a>
  <a href="" class="menu__item">{t("header.projects")}</a>
  <a href="" class="menu__item">{t("header.contact")}</a>
  <LanguageSelector showFlag={true} class="language__selector menu__item" />
</nav>

<style>
  .nav {
    display: flex;
    column-gap: 1.5rem;
  }

  .nav a {
    transition-duration: 300ms;
    transition-property: filter, text-shadow;
    font-size: 0.875rem;

    &:hover,
    &:focus,
    &:focus-visible {
      filter: brightness(1.05);
      text-shadow: 0px 0px 4px var(--secondary);
    }
  }

  .language__selector {
    background: none;
    border: none;
    font-weight: 600;
    color: var(--foreground);
    -webkit-appearance: none;
  }

  .menu__item {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
</style>
